<h3>Identificador</h3>
<p><%= @transaction.id %></p>
<h3>Quantidade</h3>
<p><%= @transaction.amount %></p>
<h3>Moeda</h3>
<p><%= @transaction.currency_to_ptbr %></p>
<h3>Cotação</h3>
<p><%= "$ #{@transaction.quotation}" %></p>
<h3>Tipo</h3>
<p><%= @transaction.transaction_type_to_ptbr %></p>
<h3>Data</h3>
<p><%= @transaction.created_at.strftime('%d/%m/%Y') %></p>
<h3>Total</h3>
<p><%= @transaction.show_total_in_dollars %></p>

<%= link_to 'Editar', edit_transaction_path %>
<%= link_to 'Voltar', root_path %>
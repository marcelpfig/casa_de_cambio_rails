<% unless @transaction.errors.blank? %>
<div class="ls-alert-info"><p>Você deve informar todos os dados da transação!</p></div>
<% end %>

<div class="ls-form ls-form-horizontal row">
  
  <%= form_for @transaction, :url => {:action => :create} do |f| %>

  <fieldset>
  <label class="ls-label col-md-4 col-xs-12">
    <b class="ls-label-text"><%= f.label :amount, 'Quantidade' %></b>
    <%= f.text_field :amount %>
  </label>

    <label class="ls-label col-md-4 col-xs-12">
    <b class="ls-label-text"><%= f.label :currency, 'Moeda' %></b>
    <div class="ls-custom-select">
      <%= f.select(:currency, options_for_select([ ['Dólar', 'dollar'], ['Real', 'real'] ])) %>
    </div>
    </label>

    <label class="ls-label col-md-4 col-xs-12">
      <b class="ls-label-text"><%= f.label :quotation, 'Cotação' %></b>
      <%= f.text_field :quotation %>
    </label>

    <label class="ls-label col-md-4 col-xs-12">
    <b class="ls-label-text"><%= f.label :transaction_type, 'Tipo' %></b>
    <div class="ls-custom-select">
      <%= f.select(:transaction_type, options_for_select([ ['Compra', 'buy'], ['Venda', 'sell'] ]), class:"ls-select") %>
    </div>
    </label>

    <label class="ls-label col-md-4 col-xs-12">
    <b class="ls-label-text"><%= f.label :user_id, 'Usuário' %></b>
    <div class="ls-custom-select">
      <%= f.collection_select(:user_id, User.all, :id, :email) %>
    </div>
    </label>
    </fieldset>

    <div class="ls-actions-btn">
      <%= f.submit 'Cadastrar', class: "ls-btn" %>
    </div>
<% end %>
</div>